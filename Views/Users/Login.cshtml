@model GibiSu.Models.ApplicationUser
@{
    ViewData["Title"] = "Login";
}

<h4 style="padding-left: 50px;color:white;">Giriş Yap</h4>
<hr />
<div class="row">
    <div>
        <form id="registerForm" method="post" asp-action="Login" >
            <input  type="hidden" name="returnUrl" value="@ViewData["returnUrl"]"/>
            <div style="margin-bottom:15px;" class="form-group">
                <div class="text-danger"></div>
                <label style="color:white" class="control-label">Kullanıcı Adı</label>
                <input id="UserName" name="userName" class="form-control" />
            </div>
            <div class="form-group">
                <label style="color:white" class="control-label">Şifre</label>
                <input id="Password" name="password" type="password" class="form-control" />
            </div>
            <div class="alert-danger">
                @if (ViewData["LoginFlag"] != null)
                {
                    @ViewData["LoginFlag"]
                }
            </div>
            <div class="form-group logsub">
                <input type="submit" class="btn btn-primary" value="Giriş Yap"/>
            </div>
        </form>
    </div>
</div>

<div class="logsub1">
    <a asp-action="Index">Back to List</a>
</div>
