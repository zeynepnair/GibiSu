@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Users" asp-action="Edit" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)" title="Manage">Hoşgeldin @User.Identity?.Name!</a> 
    </li>
    <li class="nav-item">
        <a asp-controller="Users" asp-action="Logout" style="color: white !important;" type="submit" class="nav-link btn btn-link text-dark">Logout</a>
    </li>
}
else
{
        
    <li class="nav-item">
        <a style="margin-left:10px;" class="nav-link text-dark" asp-controller="Users" asp-action="Create">Üye Ol</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Giriş Yap</a>
    </li>
}
</ul>
