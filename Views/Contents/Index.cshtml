@model IEnumerable<GibiSu.Models.Content>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" style="background-color: white;">
<h1>iÇERİKLER</h1>
<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Yeni İçerik Ekle</a>
</p>
<table class="table">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Page)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                    @if(item.Image!= null)
                    {
                        <img src="data:image/jpeg;base64, @Convert.ToBase64String(item.Image)" style="width:250px;"/>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Page.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" style="width: 70px;">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="width: 70px;">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" style="width: 70px;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>